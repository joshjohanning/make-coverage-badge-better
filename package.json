{
  "name": "@joshjohanning/make-coverage-badge-better",
  "version": "1.0.0",
  "description": "Create a coverage badge",
  "type": "module",
  "main": "src/cli.js",
  "bin": {
    "make-coverage-badge-better": "src/cli.js"
  },
  "author": {
    "name": "Josh Johanning",
    "email": "joshjohanning@github.com",
    "url": "https://github.com/joshjohanning"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshjohanning/make-coverage-badge-better.git"
  },
  "bugs": {
    "url": "https://github.com/joshjohanning/make-coverage-badge-better/issues"
  },
  "homepage": "https://github.com/joshjohanning/make-coverage-badge-better#readme",
  "keywords": [
    "coverage",
    "badge",
    "istanbul",
    "jest",
    "testing"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "coverage": "node ./src/cli.js --label-color '#333' --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "ci-test": "NODE_OPTIONS='--experimental-vm-modules' npx jest --coverage",
    "all": "npm run format:write && npm run lint && npm run ci-test && npm run coverage"
  },
  "files": [
    "src"
  ],
  "license": "MIT",
  "dependencies": {
    "mri": "1.2.0"
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-prettier": "^5.0.1",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "prettier": "^3.0.0"
  }
}
